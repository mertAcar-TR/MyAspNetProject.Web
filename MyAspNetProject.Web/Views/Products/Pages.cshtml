@{
    ViewData["Title"] = "Pages";
}
@model List<ProductViewModel>

<h2>Page: @ViewBag.Page</h2>
<h2>PageSize: @ViewBag.PageSize</h2>



<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>İsim</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Renk</th>
            <th>Yayınlansın mı?</th>
            <th>Yayında Kalma Süresi(Ay)</th>
            <th>Ürün Açıklaması</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Color</td>
                <td>@(item.IsPublish ? "Evet" : "Hayır")</td>
                <td>@item.Expire</td>
                <td>
                    @if (item.Description.Length <= 20)
                    {
                        @item.Description
                    }
                    else
                    {
                        @item.Description.Substring(0, 20)<text>...</text>
                    }
                </td>
                <td>
                    <a asp-controller="Products" asp-action="Remove" asp-route-id="@item.Id">Sil</a>
                    <a asp-controller="Products" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                    <a asp-controller="Products" asp-action="GetById" asp-route-id="@item.Id">Ürün Sayfasına Git</a>
                </td>
            </tr>

        }

    </tbody>
</table>