@{
    ViewData["Title"] = "GetById";
}

@model ProductViewModel

<a class="btn btn-primary mb-2" asp-controller="Products" asp-action="index">Ürünler Sayfasına Geri Dön</a>

<div class="card">
    <div class="card-header">
       Ürün(@Model.Name)
    </div>
    <div class="card-body">
        
        <p class="card-text">
            <div>Id:@Model.Id</div>
            <div>Açıklama:@Model.Description</div>
            <div>Fiyat:@Model.Price</div>
            <div>Stok:@Model.Stock</div>
            <div>Süre:@Model.Expire</div>
            <div>Renk:@Model.Color</div>
        </p>
       
    </div>
</div>